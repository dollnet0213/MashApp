<div class="main post-show">
  <div class="container">
    <div class="post-show-item">

    <div class="post-show-text">
    <h2>
      <%= @post.title %>
    </h2>
      <p>
        <%= @post.content %>
      </p>
    </div>

      <div class="post-show-item img">
       <img src="<%= "/post_image/#{@post.image_name}" %>">
      </div>

      <div class= "post-time" >
        <%= @post.created_at %>
        </div>

        <div class="post-menus">
        <%= link_to("編集","/post/#{@post.id}/edit")%>
        <%= link_to("削除","/post/#{@post.id}/destroy",{method: "post"})%>
        </div>

    </div>
  </div>
</div>